package geom;

/**
 * Holds the mass data for a 2-dimensional shape.
 */
public class Mass2D {
	/**
	 * The mass of the shape.
	 */
    public fixed mass;
    /**
	 * The center of mass of the shape relative to the shape's local origin.
	 */
    public /* final */ Vector2D centroid;
    /**
	 * The rotational inertia of the shape.
	 */
    public fixed inertia;

    /**
     * Blank mass data
     */
    public Mass2D() {
        mass = inertia = 0.0;
        center = new Vector2D();
    }

    /**
     * Copies the given mass data.
     */
    public Mass2D(Mass2D m) {
    	mass = m.mass;
    	inertia = m.inertia;
    	center = m.center.clone();
    }
    
	/**
	 * @return A copy of this mass data.
	 */
    public Mass2D clone() {
    	return new Mass2D(this);
    }
}
